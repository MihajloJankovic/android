<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/popUpLayout"
        android:layout_width="350dp"
        android:layout_height="540dp"
        android:background="@drawable/rating_border_no_stroke"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/upperBarLayout"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="7dp"
            android:orientation="horizontal"
            android:gravity="end">

            <RelativeLayout
                android:id="@+id/closeButtonLayout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/close_button_clicked"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                <ImageView
                    android:id="@+id/closeButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/close_button">
                </ImageView>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/popUpLayoutMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popUpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quiz_font"
                android:textColor="#046AB8"
                android:text="Create an account!"
                android:textAlignment="center"
                android:textSize="25dp"></TextView>



            <LinearLayout
                android:id="@+id/formLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/emailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/emailLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/quiz_font"
                        android:textColor="#046AB8"
                        android:text="Email address"
                        android:textSize="17dp">
                    </TextView>

                    <EditText
                        android:id="@+id/emailTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/text_box"
                        android:hint="Enter email address"
                        android:textColor="@color/black"
                        android:paddingLeft="7dp"
                        android:textColorHint="#A5A5A5"
                        tools:ignore="TouchTargetSizeCheck"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/usernameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/usernameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/quiz_font"
                        android:textColor="#046AB8"
                        android:text="Username"
                        android:textSize="17dp">
                    </TextView>

                    <EditText
                        android:id="@+id/usernameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/text_box"
                        android:hint="Enter username"
                        android:textColor="@color/black"
                        android:paddingLeft="7dp"
                        android:textColorHint="#A5A5A5"
                        tools:ignore="TouchTargetSizeCheck"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/passwordLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/quiz_font"
                        android:textColor="#046AB8"
                        android:text="Password"
                        android:textSize="17dp">
                    </TextView>

                    <EditText
                        android:id="@+id/passwordTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/text_box"
                        android:hint="Enter password"
                        android:textColor="@color/black"
                        android:paddingLeft="7dp"
                        android:textColorHint="#A5A5A5"
                        android:inputType="textPassword"
                        tools:ignore="TouchTargetSizeCheck"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/confirmPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/confirmPasswordLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/quiz_font"
                        android:textColor="#046AB8"
                        android:text="Confirm password"
                        android:textSize="17dp">
                    </TextView>

                    <EditText
                        android:id="@+id/confirmPasswordTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/text_box"
                        android:hint="Confirm password"
                        android:textColor="@color/black"
                        android:paddingLeft="7dp"
                        android:textColorHint="#A5A5A5"
                        android:inputType="textPassword"
                        tools:ignore="TouchTargetSizeCheck"></EditText>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/popUpLayoutMiddleLower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/loginButtonLayout"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/click_start_button"
                    android:id="@+id/signUpButton"
                    android:clickable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/quiz_font"
                        android:text="Sign Up"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25dp">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popUpLowerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/questionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quiz_font"
                android:textColor="#046AB8"
                android:text="Have an account?"
                android:textSize="18dp"></TextView>

            <RelativeLayout
                android:id="@+id/signInLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/signIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quiz_font"
                    android:textColor="@drawable/link_color_change"
                    android:text="Sign in!"
                    android:linksClickable="true"
                    android:textSize="18dp"></TextView>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>